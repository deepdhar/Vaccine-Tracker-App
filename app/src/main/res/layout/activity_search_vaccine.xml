<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingHorizontal="8dp"
    tools:context=".SearchVaccineActivity">

    <ImageView
        android:id="@+id/backButtonSearchVaccine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_black"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"/>

    <RelativeLayout
        android:id="@+id/center_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/getVaccinatedTv"
        android:contentDescription="@string/app_name"
        android:padding="15dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/vaccination" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/center_line"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_bg"
        android:hint="@string/enter_pincode"
        android:inputType="number"
        android:paddingHorizontal="15dp"
        android:paddingVertical="18dp"
        android:textColor="@color/black"
        android:textColorHint="#979797"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et1"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_bg"
        android:hint="@string/enter_date_dd_mm_yyyy"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingHorizontal="15dp"
        android:paddingVertical="18dp"
        android:textColor="@color/black"
        android:textColorHint="#979797"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et2"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="16dp"
            android:text="@string/search"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/getVaccinatedTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/et1"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="#GetVaccinated"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </LinearLayout>

</RelativeLayout>